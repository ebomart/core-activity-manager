{
  "name": "core-activity-manager",
  "version": "1.0.0",
  "description": "Core activity manager",
  "main": "src/index.js",
  "author": "",
  "license": "UNLICENSED",
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@fastify/env": "^4.2.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.8.0",
    "@google-cloud/tasks": "^4.0.1",
    "@kovai-pazhamudir-nilayam/kpn-platform-token": "^1.1.4",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "axios": "^1.8.2",
    "env-schema": "^5.2.0",
    "fastify": "^4.15.0",
    "fastify-healthcheck": "^4.4.0",
    "fastify-metrics": "^10.3.0",
    "http-status-codes": "^2.2.0",
    "knex": "^2.4.2",
    "moment-timezone": "^0.5.43",
    "pg": "^8.10.0",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=10.*"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "devDependencies": {
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "inquirer": "^9.2.0",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8"
  },
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*",
    ".nyc_output/*"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "scripts": {
    "lint": "eslint . -c .eslintrc.json --ext js --fix",
    "lint:fix": "npm run lint -- --fix",
    "start:dev": "NODE_ENV=development nodemon -e js index | pino-pretty -c -t -l severity",
    "start": "node --max-http-header-size 24000 src/index",
    "test:unit": "LOG_LEVEL=silent jest -c jest.config.unit.js",
    "knex": "node -r dotenv/config ./node_modules/.bin/knex",
    "migrate:make": "npm run knex -- migrate:make --knexfile ./config/knexConfig.js",
    "migrate": "npm run knex -- migrate:latest --knexfile ./config/knexConfig.js",
    "migrate:down": "npm run knex -- migrate:down --knexfile ./config/knexConfig.js",
    "prepare": "husky install"
  }
}
